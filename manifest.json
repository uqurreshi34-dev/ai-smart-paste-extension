{
    "manifest_version": 3,
    "name": "AI Smart Paste",
    "description": "Queue images from webpages for later use in AI tools",
    "version": "0.1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
