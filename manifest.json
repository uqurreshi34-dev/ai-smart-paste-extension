{
    "manifest_version": 3,
    "name": "AI Smart Paste",
    "description": "Capture screenshots and paste them into AI tools",
    "version": "0.1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "clipboardWrite"
    ]
}
